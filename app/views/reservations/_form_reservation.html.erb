<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Don't wait, book now!</h2>

    <%= simple_form_for [@superpower, @reservation] do |f| %>
      <%= f.input :check_in, as: :string, required: false, input_html: { id: "range_start" } %>
      <%= f.input :check_out, as: :string, required: false, input_html: { id: "range_end" } %>
      <%= f.button :submit, "Let's go!", class: "btn btn-warning" %>
    <% end %>

  </div>
</div>
