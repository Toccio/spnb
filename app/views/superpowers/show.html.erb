    <div class="container border-bottom mb-3 pb-3">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="sp-spiderman border-bottom">
            <h2><strong> <%= @superpower.superpower_name %> </strong></h2>
            <p> <%= @superpower.quotes %> </p>
          </div>
          <div class="more-info pt-3 border-bottom">
            <h5><strong> More info </strong></h5>
            <div class="card-spider-sense d-flex pt-3 ">
              <h4>üíé</h4>
              <div>
                <p><%= @superpower.description %></p>
              </div>
            </div>
          </div>
          <div class="more-info pt-3">
            <h5 class="more-how"><strong> How to use your superpower </strong></h5>
            <div class="rombo d-flex">
            <img src="/assets/fulmine.png" alt="" class="fulmine">
              <p> <%= @superpower.more_info %></p></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="reservation-form ">
            <%= render 'reservations/form_reservation' %>
          </div>
        </div>
      </div>
    </div>



    <div class="container">
      <div class="row">
<%# MAP %>
        <div class="col-12 col-lg-6">
        <h3>Where I am now üåç</h3>
          <div class="d-flex">
           <div style="width: 100%; height: 600px;"
              data-controller="mapbox"
              data-mapbox-markers-value="<%= @markers.to_json %>"
              data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>

      </div>
<%# REVIEWS %>
        <div class="col-12 col-lg-6">
          <div class="reviews-rating d-flex review pt-3">
            <h5><strong id="review">‚≠ê <%= @superpower.rating %> - <%= @superpower.number %> reviews</strong></h5>
          </div>
          <div class="review-space-text d-flex">
            <a href="#"><img src=" <%= @superpower.avatar %>" alt="" width="50" height="50" class="rounded-circle"></a>
            <h4> <%= @superpower.name %></h4>
          </div>

          <% @reviews.each do |review| %>
            <p class="star">‚≠ê <%= review.rating %></p>
            <p class="rev-content"><%= review.content %></p>
          <% end  %>
        </div>

    </div>
</div>
