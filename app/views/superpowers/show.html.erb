<div class="show-container container w-100 pt-3">
  <div class="avatar-name d-flex justify-content-between">
    <div class="d-flex ">
        <a href="#">
        <% if @superpower.avatar %>
          <img src=" <%= @superpower.avatar %>" alt="" width="50" height="50" class="avatar-border rounded-circle">
        <% else  %>
          <img src="https://res.cloudinary.com/dawkcyufa/image/upload/v1660398016/Screenshot_2022-08-06_at_11.36.02_rn2hbl.png" alt="" width="50" height="50" class="avatar-border rounded-circle">
        <% end %>
        </a>
        <h4 class="no-margin-name"> <strong><%= @superpower.name %></strong></h4>
    </div>
    <p class="no-margin-name">‚≠ê <%= @superpower.rating %> ‚ô¶Ô∏è <a href="#review">  <%= @superpower.number %> reviews  </a></p>
  </div>


    <%# Caroserl %>
    <% if !@superpower.photos.empty? %>
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% @superpower.photos.each_with_index do |photo, index| %>
            <div class="carousel-item active mt-3 mb-3">
              <%= cl_image_tag photo.key, height: 500, width: 1200, crop: :fill %>
            </div>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% else %>
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carosello carousel-inner">
          <div class="carousel-item active">
            <img src="https://res.cloudinary.com/dawkcyufa/image/upload/v1660394917/sup_old_group_eqp7ql.jpg" class="img-carosel d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dawkcyufa/image/upload/v1660394917/superheroes-super-videoSixteenByNineJumbo1600_vihgcq.jpg" class="img-carosel d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="https://res.cloudinary.com/dawkcyufa/image/upload/v1660394917/sup_batman_yvaohe.jpg" class="img-carosel d-block w-100" alt="...">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% end %>



    <div class="container border-bottom mb-3 pb-3">
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="sp-spiderman border-bottom">
            <h2><strong> <%= @superpower.superpower_name %> </strong></h2>
            <p> <%= @superpower.quotes %> </p>
          </div>
          <div class="more-info pt-3 border-bottom">
            <h5><strong> More info </strong></h5>
            <div class="card-spider-sense d-flex pt-3 ">
              <h4>üíé</h4>
              <div>
                <p><%= @superpower.description %></p>
              </div>
            </div>
          </div>
          <div class="more-info pt-3">
            <h5 class="more-how"><strong> How to use your superpower </strong></h5>
            <div class="rombo d-flex">
            <img src="https://res.cloudinary.com/dawkcyufa/image/upload/v1660397720/fulmine_yszq5j.png" alt="" class="fulmine">
              <p> <%= @superpower.more_info %></p></p>
            </div>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="reservation-form ">
            <%= render 'reservations/form_reservation' %>
          </div>
        </div>
      </div>
    </div>



    <div class="container">
      <div class="row">
        <%# MAP %>
        <% if !@superpower.photos.empty? %>
          <div class="col-12 col-lg-12">
            <h3 class="d-flex justify-content-center">Where I am now üåç</h3>
            <div class="d-flex">
            <div style="width: 100%; height: 600px;"
                class="map-b-radius"
                data-controller="mapbox"
                data-mapbox-markers-value="<%= @markers.to_json %>"
                data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
            </div>
          </div>
        <% else %>
          <div class="col-12 col-lg-6">
            <h3>Where I am now üåç</h3>
            <div class="d-flex">
            <div style="width: 100%; height: 600px;"
                class="map-b-radius"
                data-controller="mapbox"
                data-mapbox-markers-value="<%= @markers.to_json %>"
                data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
              </div>
            </div>
          </div>
        <% end %>

        <%# REVIEWS %>
        <div class="col-12 col-lg-6">
          <div class="reviews-rating d-flex review pt-3">
            <% if !@superpower.reviews.empty? %>
              <h5><strong id="review">‚≠ê <%= @superpower.rating %> - <%= @superpower.number %> reviews</strong></h5>
            <% end %>
          </div>

          <% @superpower.reviews.each do |review| %>
            <img src=" <%= @superpower.avatar %>" alt="" width="50" height="50" class="avatar-border rounded-circle">
            <p class="star">‚≠ê <%= review.rating %></p>
            <p class="rev-content"><%= review.content %></p>
          <% end  %>


        </div>
      </div>
    </div>
</div>
